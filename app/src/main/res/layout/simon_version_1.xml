<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci4020.shawnbickel_judsonthomas.assignment2.simon.SimonVersion1"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativelayout">

        <TextView
            android:text="Version1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/button_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight=".5"
                android:id="@+id/top_row">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_left"
                    android:id="@+id/top_left_button"
                    android:layout_weight=".5" />

                <ImageView
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_right"
                    android:id="@+id/top_right_button"
                    android:layout_weight=".5"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:weightSum="1"
                android:id="@+id/bottom_row">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bottom_left"
                    android:id="@+id/bottom_left_button"
                    android:layout_weight=".5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bottom_right"
                    android:id="@+id/bottom_right_button"
                    android:layout_weight=".5" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/game_text_layout"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:layout_weight=".5">

            <Button
                android:text="Pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SimonTevtView"
                android:layout_alignLeft="@+id/SimonTevtView"
                android:layout_alignStart="@+id/SimonTevtView"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/pause_button"
                android:textColor="#ffffff"
                android:background="#000000"
                android:textSize="18sp" />

            <Button
                android:text="Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SimonTevtView"
                android:layout_alignRight="@+id/SimonTevtView"
                android:layout_alignEnd="@+id/SimonTevtView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/play_button"
                android:textColor="#ffffff"
                android:background="#000000"
                android:textSize="18sp" />

            <TextView
                android:text="SIMON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SimonTevtView"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pause_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="false">

            <TextView
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:text="000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/HighScore"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
