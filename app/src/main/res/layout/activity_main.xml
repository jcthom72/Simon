<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csci4020.shawnbickel_judsonthomas.assignment2.simon.MainActivity"
    android:background="#000000">

    <TextView
        android:text="SIMON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SimonTevtView"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SimonTevtView"
        android:layout_alignRight="@+id/SimonTevtView"
        android:layout_alignEnd="@+id/SimonTevtView"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/play_button"
        android:textColor="#ffffff"
        android:background="#000000" />

    <Button
        android:text="Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SimonTevtView"
        android:layout_alignLeft="@+id/SimonTevtView"
        android:layout_alignStart="@+id/SimonTevtView"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/pause_button"
        android:textColor="#ffffff"
        android:background="#000000" />


</RelativeLayout>
