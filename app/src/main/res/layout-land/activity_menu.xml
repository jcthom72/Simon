<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csci4020.shawnbickel_judsonthomas.assignment2.simon.MenuActivity"
    android:background="#0047AB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Simon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/SimonTextView1"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:fontFamily="cursive" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="@string/GameDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RadioGroupVersions"
                android:orientation="horizontal">

                <RadioButton
                    android:text="Version 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton1"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:text="Version 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <RadioButton
                    android:text="Version 3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton3"
                    android:textSize="14sp"
                    android:layout_weight="1" />

            </RadioGroup>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <Button
                android:text="Play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Simon_button"
                android:background="#0047AB"
                android:layout_weight="1"
                android:textColor="#03C03C"
                android:textSize="36sp"
                android:fontFamily="cursive" />

            <Button
                android:text="About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/About_button"
                android:layout_weight="1"
                android:background="#0047AB"
                android:textColor="#E32636"
                android:textSize="36sp"
                android:fontFamily="cursive" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
